{
  "name": "Snowy Burrow",
  "image": "mcr.microsoft.com/devcontainers/base:alpine-3.18",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "multiUser": true,
      "version": "latest",
      "extraNixConfig": "trusted-users = root vscode,accept-flake-config = true",
      "flakeUri": "github:UnidealisticRaccoon/SnowyBurrow/feat-ezconfigs#homeConfigurations.vscode.activationPackage"
    }
  },
  "onCreateCommand": "nix run nixpkgs#home-manager -- switch -b backup --flake .#vscode",
  "updateContentCommand": "direnv allow",
  "customizations": {
    "vscode": {
      "extensions": ["pinage404.nix-extension-pack"]
    }
  }
}
